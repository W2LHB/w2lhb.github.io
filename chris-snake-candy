    <script>
        // å…¨å±€å˜é‡
        let currentMode = ''; // å½“å‰æ¸¸æˆæ¨¡å¼
        let gameScore = 0; // æ¸¸æˆåˆ†æ•°
        let giftProgress = 0; // ç¥ç¦è§£é”è¿›åº¦
        let isPaused = false; // æ¸¸æˆæš‚åœçŠ¶æ€
        let snowInterval; // é›ªèŠ±åŠ¨ç”»å®šæ—¶å™¨

        // DOMå…ƒç´ 
        const loader = document.getElementById('loader');
        const snowContainer = document.getElementById('snowContainer');
        const snakeModeBtn = document.getElementById('snake-mode');
        const matchModeBtn = document.getElementById('match-mode');
        const gameContainer = document.getElementById('gameContainer');
        const gameInfo = document.getElementById('gameInfo');
        const controlPanel = document.getElementById('controlPanel');
        const snakeControls = document.getElementById('snakeControls');
        const gameScoreEl = document.getElementById('gameScore');
        const giftProgressEl = document.getElementById('giftProgress');
        const blessingModal = document.getElementById('blessingModal');
        const closeModal = document.getElementById('closeModal');
        const restartBtn = document.getElementById('restartBtn');
        const pauseBtn = document.getElementById('pauseBtn');
        const bgMusic = document.getElementById('bgMusic');
        const successSound = document.getElementById('successSound');

        // è´ªåƒè›‡æ¸¸æˆå˜é‡
        const snakeGame = document.getElementById('snake-game');
        const snakeCtx = snakeGame.getContext('2d');
        let snake = [];
        let food = {};
        let direction = 'right';
        let nextDirection = 'right';
        let snakeGameLoop;
        const gridSize = 20;
        let tileCount;

        // æ¶ˆæ¶ˆä¹æ¸¸æˆå˜é‡
        const matchGame = document.getElementById('match-game');
        const matchItems = ['ğŸ„', 'ğŸ', 'â„ï¸', 'ğŸ…', 'ğŸŒŸ', 'ğŸª'];
        let gameGrid = [];
        let selectedItem = null;
        let matchGameLoop;

        // é¡µé¢åŠ è½½å®Œæˆååˆå§‹åŒ–
        window.addEventListener('load', () => {
            // æ¨¡æ‹ŸåŠ è½½è¿‡ç¨‹
            setTimeout(() => {
                loader.style.opacity = '0';
                setTimeout(() => {
                    loader.style.display = 'none';
                    // æ’­æ”¾èƒŒæ™¯éŸ³ä¹ï¼ˆé€‚é…å¾®ä¿¡ï¼‰
                    document.body.addEventListener('click', playBgMusic, { once: true });
                }, 800);
            }, 1500);

            // åˆ›å»ºé›ªèŠ±èƒŒæ™¯
            createSnowflakes();

            // ç»‘å®šç©æ³•é€‰æ‹©äº‹ä»¶
            snakeModeBtn.addEventListener('click', () => switchMode('snake'));
            matchModeBtn.addEventListener('click', () => switchMode('match'));

            // ç»‘å®šæ§åˆ¶æŒ‰é’®äº‹ä»¶
            restartBtn.addEventListener('click', restartGame);
            pauseBtn.addEventListener('click', togglePause);
            closeModal.addEventListener('click', () => {
                blessingModal.style.display = 'none';
                // ç»§ç»­æ’­æ”¾éŸ³ä¹
                bgMusic.play();
            });

            // ç»‘å®šè´ªåƒè›‡æ–¹å‘æŒ‰é’®äº‹ä»¶
            document.querySelectorAll('.dir-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    if (currentMode === 'snake' && !isPaused) {
                        nextDirection = btn.classList[1];
                    }
                });
            });
        });

        // æ’­æ”¾èƒŒæ™¯éŸ³ä¹ï¼ˆé€‚é…å¾®ä¿¡æµè§ˆå™¨ï¼‰
        function playBgMusic() {
            bgMusic.play().catch(err => {
                console.log('å¾®ä¿¡æµè§ˆå™¨éœ€è¦ç”¨æˆ·äº¤äº’æ‰èƒ½æ’­æ”¾éŸ³ä¹');
            });
        }

        // åˆ›å»ºé›ªèŠ±èƒŒæ™¯åŠ¨ç”»
        function createSnowflakes() {
            snowInterval = setInterval(() => {
                const snowflake = document.createElement('div');
                snowflake.textContent = ['â„ï¸', 'â…', 'â†'][Math.floor(Math.random() * 3)];
                snowflake.style.position = 'absolute';
                snowflake.style.left = `${Math.random() * 100}vw`;
                snowflake.style.top = '-20px';
                snowflake.style.fontSize = `${Math.random() * 15 + 10}px`;
                snowflake.style.opacity = Math.random() * 0.8 + 0.2;
                snowflake.style.animation = `snowfall ${Math.random() * 10 + 5}s linear infinite`;
                snowContainer.appendChild(snowflake);

                // é›ªèŠ±è½åœ°åç§»é™¤
                setTimeout(() => {
                    snowflake.remove();
                }, 15000);
            }, 300);

            // å®šä¹‰é›ªèŠ±é£˜è½åŠ¨ç”»
            const style = document.createElement('style');
            style.textContent = `
                @keyframes snowfall {
                    0% { transform: translateY(0) rotate(0deg); }
                    100% { transform: translateY(100vh) rotate(720deg); }
                }
            `;
            document.head.appendChild(style);
        }

        // åˆ‡æ¢æ¸¸æˆæ¨¡å¼
        function switchMode(mode) {
            // é‡ç½®æ¸¸æˆçŠ¶æ€
            resetGame();
            currentMode = mode;

            // æ›´æ–°æŒ‰é’®æ ·å¼
            snakeModeBtn.classList.remove('active');
            matchModeBtn.classList.remove('active');
            if (mode === 'snake') {
                snakeModeBtn.classList.add('active');
            } else {
                matchModeBtn.classList.add('active');
            }

            // æ˜¾ç¤ºæ¸¸æˆç•Œé¢
            gameContainer.style.display = 'block';
            gameInfo.style.display = 'flex';
            controlPanel.style.display = 'flex';

            // æ ¹æ®æ¨¡å¼åˆå§‹åŒ–æ¸¸æˆ
            if (mode === 'snake') {
                snakeControls.style.display = 'block';
                matchGame.style.display = 'none';
                snakeGame.style.display = 'block';
                initSnakeGame();
            } else {
                snakeControls.style.display = 'none';
                snakeGame.style.display = 'none';
                matchGame.style.display = 'grid';
                initMatchGame();
            }
        }

        // é‡ç½®æ¸¸æˆçŠ¶æ€
        function resetGame() {
            // æ¸…é™¤å®šæ—¶å™¨
            clearInterval(snakeGameLoop);
            clearInterval(matchGameLoop);

            // é‡ç½®åˆ†æ•°å’Œè¿›åº¦
            gameScore = 0;
            giftProgress = 0;
            updateGameInfo();

            // é‡ç½®æš‚åœçŠ¶æ€
            isPaused = false;
            pauseBtn.textContent = 'æš‚åœæ¸¸æˆ';
        }

        // é‡æ–°å¼€å§‹æ¸¸æˆ
        function restartGame() {
            if (currentMode === 'snake') {
                initSnakeGame();
            } else {
                initMatchGame();
            }
            isPaused = false;
            pauseBtn.textContent = 'æš‚åœæ¸¸æˆ';
        }

        // æš‚åœ/ç»§ç»­æ¸¸æˆ
        function togglePause() {
            if (isPaused) {
                isPaused = false;
                pauseBtn.textContent = 'æš‚åœæ¸¸æˆ';
                // ç»§ç»­æ¸¸æˆå¾ªç¯
                if (currentMode === 'snake') {
                    snakeGameLoop = setInterval(updateSnakeGame, 200);
                }
            } else {
                isPaused = true;
                pauseBtn.textContent = 'ç»§ç»­æ¸¸æˆ';
                // æš‚åœæ¸¸æˆå¾ªç¯
                clearInterval(snakeGameLoop);
            }
        }

        // æ›´æ–°æ¸¸æˆä¿¡æ¯
        function updateGameInfo() {
            gameScoreEl.textContent = gameScore;
            giftProgressEl.textContent = giftProgress;

            // è§£é”ç¥ç¦ï¼ˆè¿›åº¦100%ï¼‰
            if (giftProgress >= 100) {
                setTimeout(() => {
                    blessingModal.style.display = 'flex';
                    successSound.play();
                    bgMusic.pause();
                }, 500);
                giftProgress = 0; // é‡ç½®è¿›åº¦
            }
        }

        // ---------------------- è´ªåƒè›‡æ¸¸æˆé€»è¾‘ ----------------------
        function initSnakeGame() {
            // è®¾ç½®ç”»å¸ƒå°ºå¯¸
            snakeGame.width = snakeGame.offsetWidth;
            snakeGame.height = snakeGame.offsetHeight;
            tileCount = Math.floor(snakeGame.width / gridSize);

            // åˆå§‹åŒ–è›‡
            snake = [
                { x: tileCount / 2, y: tileCount / 2 },
                { x: tileCount / 2 - 1, y: tileCount / 2 },
                { x: tileCount / 2 - 2, y: tileCount / 2 }
            ];
            direction = 'right';
            nextDirection = 'right';

            // ç”Ÿæˆé£Ÿç‰©
            generateFood();

            // å¼€å§‹æ¸¸æˆå¾ªç¯
            clearInterval(snakeGameLoop);
            snakeGameLoop = setInterval(updateSnakeGame, 200);

            // ç»˜åˆ¶åˆå§‹ç”»é¢
            drawSnakeGame();
        }

        function generateFood() {
            food = {
                x: Math.floor(Math.random() * tileCount),
                y: Math.floor(Math.random() * tileCount)
            };
            // é¿å…é£Ÿç‰©åœ¨è›‡èº«ä¸Š
            snake.forEach(segment => {
                if (segment.x === food.x && segment.y === food.y) {
                    generateFood();
                }
            });
        }

        function updateSnakeGame() {
            if (isPaused) return;

            // æ›´æ–°æ–¹å‘
            direction = getValidDirection(nextDirection);

            // ç§»åŠ¨è›‡å¤´
            const head = { ...snake[0] };
            switch (direction) {
                case 'up': head.y--; break;
                case 'down': head.y++; break;
                case 'left': head.x--; break;
                case 'right': head.x++; break;
            }
            snake.unshift(head);

            // ç¢°æ’æ£€æµ‹
            if (head.x < 0 || head.x >= tileCount || head.y < 0 || head.y >= tileCount) {
                // æ’å¢™ï¼Œé‡ç½®æ¸¸æˆ
                initSnakeGame();
                return;
            }
            for (let i = 1; i < snake.length; i++) {
                if (head.x === snake[i].x && head.y === snake[i].y) {
                    // æ’è‡ªå·±ï¼Œé‡ç½®æ¸¸æˆ
                    initSnakeGame();
                    return;
                }
            }

            // åƒé£Ÿç‰©æ£€æµ‹
            if (head.x === food.x && head.y === food.y) {
                gameScore += 10;
                giftProgress = Math.min(100, giftProgress + 10);
                updateGameInfo();
                generateFood();
            } else {
                snake.pop();
            }

            // ç»˜åˆ¶æ¸¸æˆ
            drawSnakeGame();
        }

        function drawSnakeGame() {
            // æ¸…ç©ºç”»å¸ƒ
            snakeCtx.fillStyle = '#F8F9FA';
            snakeCtx.fillRect(0, 0, snakeGame.width, snakeGame.height);

            // ç»˜åˆ¶ç½‘æ ¼
            snakeCtx.strokeStyle = '#E9ECEF';
            for (let i = 0; i < tileCount; i++) {
                snakeCtx.beginPath();
                snakeCtx.moveTo(i * gridSize, 0);
                snakeCtx.lineTo(i * gridSize, snakeGame.height);
                snakeCtx.stroke();
                snakeCtx.beginPath();
                snakeCtx.moveTo(0, i * gridSize);
                snakeCtx.lineTo(snakeGame.width, i * gridSize);
                snakeCtx.stroke();
            }

            // ç»˜åˆ¶é£Ÿç‰©ï¼ˆåœ£è¯ç¤¼ç‰©ï¼‰
            snakeCtx.fillStyle = '#E63946';
            snakeCtx.beginPath();
            snakeCtx.arc(
                food.x * gridSize + gridSize/2,
                food.y * gridSize + gridSize/2,
                gridSize/2 - 2,
                0,
                Math.PI * 2
            );
            snakeCtx.fill();
            snakeCtx.fillStyle = '#FFD700';
            snakeCtx.font = '16px Arial';
            snakeCtx.textAlign = 'center';
            snakeCtx.fillText('ğŸ', food.x * gridSize + gridSize/2, food.y * gridSize + gridSize/2 + 5);

            // ç»˜åˆ¶è›‡ï¼ˆåœ£è¯é…è‰²ï¼‰
            snake.forEach((segment, index) => {
                snakeCtx.fillStyle = index === 0 ? '#2A9D8F' : '#81B29A';
                snakeCtx.beginPath();
                snakeCtx.roundRect(
                    segment.x * gridSize + 1,
                    segment.y * gridSize + 1,
                    gridSize - 2,
                    gridSize - 2,
                    4
                );
                snakeCtx.fill();
                // è›‡å¤´è£…é¥°
                if (index === 0) {
                    snakeCtx.fillStyle = '#FFD700';
                    snakeCtx.beginPath();
                    snakeCtx.arc(
                        segment.x * gridSize + gridSize/2 + 5,
                        segment.y * gridSize + gridSize/2 - 5,
                        3,
                        0,
                        Math.PI * 2
                    );
                    snakeCtx.fill();
                }
            });
        }

        function getValidDirection(newDir) {
            if (direction === 'up' && newDir === 'down') return direction;
            if (direction === 'down' && newDir === 'up') return direction;
            if (direction === 'left' && newDir === 'right') return direction;
            if (direction === 'right' && newDir === 'left') return direction;
            return newDir;
        }

        // ---------------------- æ¶ˆæ¶ˆä¹æ¸¸æˆé€»è¾‘ ----------------------
        function initMatchGame() {
            // åˆå§‹åŒ–æ¸¸æˆç½‘æ ¼
            gameGrid = [];
            matchGame.innerHTML = '';

            // ç”Ÿæˆéšæœºç½‘æ ¼
            for (let row = 0; row < 6; row++) {
                gameGrid[row] = [];
                for (let col = 0; col < 6; col++) {
                    const randomItem = matchItems[Math.floor(Math.random() * matchItems.length)];
                    gameGrid[row][col] = randomItem;

                    // åˆ›å»ºæ¸¸æˆå…ƒç´ 
                    const item = document.createElement('div');
                    item.className = 'match-item';
                    item.dataset.row = row;
                    item.dataset.col = col;
                    item.textContent = randomItem;
                    item.addEventListener('click', selectMatchItem);
                    matchGame.appendChild(item);
                }
            }

            // ç»˜åˆ¶åˆå§‹ç½‘æ ¼
            drawMatchGame();
        }

        function selectMatchItem(e) {
            if (isPaused) return;

            const item = e.target;
            const row = parseInt(item.dataset.row);
            const col = parseInt(item.dataset.col);

            // å¦‚æœæ²¡æœ‰é€‰ä¸­é¡¹ï¼Œè®°å½•å½“å‰é€‰ä¸­
            if (!selectedItem) {
                selectedItem = { row, col, element: item };
                item.style.transform = 'scale(1.1)';
                item.style.background = 'var(--christmas-gold)';
                return;
            }

            // å¦‚æœé€‰ä¸­äº†åŒä¸€ä¸ªé¡¹ï¼Œå–æ¶ˆé€‰æ‹©
            if (selectedItem.row === row && selectedItem.col === col) {
                selectedItem.element.style.transform = 'scale(1)';
                selectedItem.element.style.background = 'rgba(42, 157, 143, 0.8)';
                selectedItem = null;
                return;
            }

            // æ£€æŸ¥æ˜¯å¦ç›¸é‚»
            const isAdjacent = (Math.abs(selectedItem.row - row) === 1 && selectedItem.col === col) || 
                               (Math.abs(selectedItem.col - col) === 1 && selectedItem.row === row);

            if (isAdjacent) {
                // äº¤æ¢å…ƒç´ 
                [gameGrid[selectedItem.row][selectedItem.col], gameGrid[row][col]] = 
                [gameGrid[row][col], gameGrid[selectedItem.row][selectedItem.col]];

                // æ£€æŸ¥åŒ¹é…
                const matches = checkMatches();
                if (matches.length > 0) {
                    // æ¶ˆé™¤åŒ¹é…é¡¹
                    removeMatches(matches);
                    gameScore += matches.length * 5;
                    giftProgress = Math.min(100, giftProgress + matches.length * 2);
                    updateGameInfo();
                } else {
                    // æ²¡æœ‰åŒ¹é…ï¼Œäº¤æ¢å›æ¥
                    [gameGrid[selectedItem.row][selectedItem.col], gameGrid[row][col]] = 
                    [gameGrid[row][col], gameGrid[selectedItem.row][selectedItem.col]];
                }
            }

            // é‡ç½®é€‰ä¸­çŠ¶æ€
            selectedItem.element.style.transform = 'scale(1)';
            selectedItem.element.style.background = 'rgba(42, 157, 143, 0.8)';
            selectedItem = null;

            // é‡æ–°ç»˜åˆ¶ç½‘æ ¼
            drawMatchGame();
        }

        function checkMatches() {
            const matches = [];
            // æ£€æŸ¥è¡ŒåŒ¹é…
            for (let row = 0; row < 6; row++) {
                for (let col = 0; col < 4; col++) {
                    const item = gameGrid[row][col];
                    if (item && item === gameGrid[row][col+1] && item === gameGrid[row][col+2]) {
                        matches.push({ row, col }, { row, col: col+1 }, { row, col: col+2 });
                    }
                }
            }
            // æ£€æŸ¥åˆ—åŒ¹é…
            for (let col = 0; col < 6; col++) {
                for (let row = 0; row < 4; row++) {
                    const item = gameGrid[row][col];
                    if (item && item === gameGrid[row+1][col] && item === gameGrid[row+2][col]) {
                        matches.push({ row, col }, { row: row+1, col }, { row: row+2, col });
                    }
                }
            }
            return matches;
        }

        function removeMatches(matches) {
            // ç§»é™¤åŒ¹é…é¡¹å¹¶å¡«å……æ–°å…ƒç´ 
            matches.forEach(match => {
                gameGrid[match.row][match.col] = matchItems[Math.floor(Math.random() * matchItems.length)];
            });
        }

        function drawMatchGame() {
            // æ›´æ–°ç½‘æ ¼æ˜¾ç¤º
            const items = document.querySelectorAll('.match-item');
            items.forEach((item, index) => {
                const row = Math.floor(index / 6);
                const col = index % 6;
                item.textContent = gameGrid[row][col];
            });
        }
    </script>
</body>
</html>
